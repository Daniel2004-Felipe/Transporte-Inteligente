<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8D5E8"
    android:padding="20dp">

    <!-- Header with back arrow -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="←"
            android:textSize="20sp"
            android:textColor="#FF9800"
            android:gravity="center"
            android:contentDescription="Volver" />

    </LinearLayout>
    <Button
        android:id="@+id/btnVerRutas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver rutas guardadas"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa el destino"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="20dp"/>

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="24dp"
        android:elevation="1dp">

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="🔍"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginEnd="12dp" />

        <EditText
            android:id="@+id/searchDestination"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Ingresa el destino"
            android:textColorHint="#BBBBBB"
            android:textColor="#333333"
            android:textSize="16sp"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <!-- Route 1 -->
    <LinearLayout
        android:id="@+id/route1Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:layout_marginBottom="12dp"
        android:elevation="2dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruta 1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:00 am hora de llegada"
            android:textSize="14sp"
            android:textColor="#888888"/>
    </LinearLayout>

    <!-- Route 2 -->
    <LinearLayout
        android:id="@+id/route2Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:layout_marginBottom="12dp"
        android:elevation="2dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruta 2"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:20 am hora de llegada"
            android:textSize="14sp"
            android:textColor="#888888"/>
    </LinearLayout>

    <!-- Route 3 -->
    <LinearLayout
        android:id="@+id/route3Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:layout_marginBottom="12dp"
        android:elevation="2dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruta 3"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:35 am hora de llegada"
            android:textSize="14sp"
            android:textColor="#888888"/>
    </LinearLayout>

    <!-- Best Route -->
    <LinearLayout
        android:id="@+id/bestRouteContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:layout_marginBottom="32dp"
        android:elevation="2dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona la mejor"
            android:textSize="18sp"
            android:textColor="#666666"/>
    </LinearLayout>

    <!-- Select Button -->
    <Button
        android:id="@+id/selectButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Seleccionar"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#4A148C"
        android:elevation="4dp"
        android:letterSpacing="0.05" />

</LinearLayout>